@model Item

<h1>update subitem</h1>

<div class="container">
    <form method="post" asp-action="Update" asp-controller="Items"
          asp-route-id="@Url.ActionContext.RouteData.Values["id"]"
          asp-route-CategoryId="@Context.Request.Query["CategoryId"]" enctype="multipart/form-data">
        <div class="row">
            <div class="col-6">
                <label>
                    @Html.DisplayNameFor(x => x.Name)
                </label>
                <input type="text" asp-for="@Model.Name" class="form-control" />
            </div>
            <div class="col-6">
                <input type="submit" class="btn btn-success" value="save" />
            </div>
        </div>
    </form>
</div>
