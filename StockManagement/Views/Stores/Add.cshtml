@model Store

<h1>ADD STORE</h1>
<div class="container">
    <form method="post" asp-action="ConfirmAdd" asp-controller="Stores" enctype="multipart/form-data">
        <div class="row">


            <div class="col-6">
                <label>
                    @Html.DisplayNameFor(x => x.Name)
                </label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            @{
                int.TryParse(Url.ActionContext.RouteData.Values["id"].ToString(), out int BrancheId);
            }
            <input type="hidden" asp-for="@BrancheId" />

            <div class="col-6">
                <input type="submit" class="btn btn-success" value="save" />

                <a class="btn btn-dark text-white" asp-action="Index" asp-route-id="@Url.ActionContext.RouteData.Values["id"]">Cancel</a>
            </div>

        </div>
    </form>
</div> 